{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "checkJs": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
